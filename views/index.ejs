<%- include('./partials/header.ejs') %>

<% if (error && error.length > 0) { %>
  <div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-red-500 z-50">
    <span class="text-white font-medium"><%= error %></span>
  </div>
<% } %>

<div class="min-h-screen flex flex-col lg:flex-row px-10 py-20 gap-10 items-center justify-center bg-gray-50">

  <!-- Registration Section -->
  <div class="w-full lg:w-1/2 flex flex-col items-center">
    <div class="w-full max-w-md px-6 py-8 bg-white shadow-md rounded-lg">
      <h2 class="text-3xl font-bold mb-4 text-center">Welcome to <span class="text-blue-500">Scatch</span></h2>
      <h3 class="text-xl text-gray-600 mb-6 text-center">Create Your Account</h3>
      <form autocomplete="off" action="/users/register" method="post" class="flex flex-col gap-4">
        <input name="fullname" type="text" placeholder="Full Name"
          class="border p-2 rounded focus:ring-2 focus:ring-blue-400 w-full">
        <input name="email" type="email" placeholder="Email"
          class="border p-2 rounded focus:ring-2 focus:ring-blue-400 w-full">
        <input name="password" type="password" placeholder="Password"
          class="border p-2 rounded focus:ring-2 focus:ring-blue-400 w-full">
        <button type="submit"
          class="bg-blue-500 text-white py-3 rounded-full mt-2 hover:bg-blue-600 transition font-semibold">
          Create My Account
        </button>
      </form>
    </div>
  </div>

  <!-- Login Section -->
  <div class="w-full lg:w-1/2 flex flex-col items-center">
    <div class="w-full max-w-md px-6 py-8 bg-white shadow-md rounded-lg">
      <h2 class="text-2xl font-bold mb-4 text-center">Login to Your Account</h2>
      <form autocomplete="off" action="/users/login" method="post" class="flex flex-col gap-4">
        <input name="email" type="email" placeholder="Email"
          class="border p-2 rounded focus:ring-2 focus:ring-blue-400 w-full">
        <input name="password" type="password" placeholder="Password"
          class="border p-2 rounded focus:ring-2 focus:ring-blue-400 w-full">
        <button type="submit"
          class="bg-blue-500 text-white py-3 rounded-full mt-2 hover:bg-blue-600 transition font-semibold w-full">
          Login
        </button>
      </form>
    </div>
  </div>

</div>

<%- include('./partials/footer') %>

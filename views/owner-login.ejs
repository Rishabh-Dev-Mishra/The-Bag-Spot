<%- include('./partials/header') %>

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4">
  <div class="w-full max-w-md bg-white shadow-md rounded-lg p-8">
    <h2 class="text-3xl font-bold mb-6 text-center">Admin Access</h2>

    <% if (error && error.length > 0) { %>
      <div class="mb-4 p-3 bg-red-500 text-white rounded">
        <%= error %>
      </div>
    <% } %>

    <form action="/create" method="post" class="flex flex-col gap-4">
      <input name="email" type="email" placeholder="Email"
        class="border p-2 rounded focus:ring-2 focus:ring-blue-400 w-full" required>
      <input name="password" type="password" placeholder="Password"
        class="border p-2 rounded focus:ring-2 focus:ring-blue-400 w-full" required>
      <button type="submit"
        class="bg-blue-500 text-white py-3 rounded-full hover:bg-blue-600 transition font-semibold">
        Login
      </button>
    </form>
  </div>
</div>

<%- include('./partials/footer') %>

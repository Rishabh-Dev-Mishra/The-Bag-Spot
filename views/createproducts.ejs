<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
  <div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-500 z-50">
    <span class="text-white font-medium"><%= success %></span>
  </div>
<% } %>

<div class="min-h-screen flex flex-col lg:flex-row px-10 py-10 gap-10">

  <!-- Sidebar -->
  <aside class="w-full lg:w-1/4 flex flex-col gap-4">
    <a class="block w-fit mb-2 text-gray-700 hover:text-blue-500 transition" href="#">All Products</a>
    <a class="block w-fit mb-2 text-gray-700 hover:text-blue-500 transition" href="#">Create New Product</a>
  </aside>

  <!-- Main Form -->
  <main class="w-full lg:w-3/4 bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6">Create New Product</h2>

    <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="flex flex-col gap-6">

      <!-- Product Details -->
      <section>
        <h3 class="text-lg font-semibold mb-3">Product Details</h3>

        <div class="mb-4">
          <label class="block mb-2 font-medium text-gray-700">Product Image</label>
          <input name="image" type="file" class="border rounded p-2 w-full">
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input name="name" type="text" placeholder="Product Name" class="border p-2 rounded w-full focus:ring-2 focus:ring-blue-400">
          <input name="price" type="text" placeholder="Product Price" class="border p-2 rounded w-full focus:ring-2 focus:ring-blue-400">
          <input name="discount" type="text" placeholder="Discount Price" class="border p-2 rounded w-full focus:ring-2 focus:ring-blue-400">
        </div>
      </section>

      <!-- Panel Details -->
      <section>
        <h3 class="text-lg font-semibold mb-3">Panel Details</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input name="bgcolor" type="text" placeholder="Background Color" class="border p-2 rounded w-full focus:ring-2 focus:ring-blue-400">
          <input name="panelcolor" type="text" placeholder="Panel Color" class="border p-2 rounded w-full focus:ring-2 focus:ring-blue-400">
          <input name="textcolor" type="text" placeholder="Text Color" class="border p-2 rounded w-full focus:ring-2 focus:ring-blue-400">
        </div>
      </section>

      <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-lg font-semibold hover:bg-blue-600 transition w-fit">
        Create New Product
      </button>
    </form>
  </main>
</div>

<%- include('./partials/footer') %>

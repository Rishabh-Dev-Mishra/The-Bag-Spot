<%- include('./partials/header') %>

<% if (success && success.length > 0) { %>
  <div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-4 rounded-xl bg-green-500 text-white shadow-lg z-50 transition-all duration-300 animate-slide-in-down">
    <span class="font-semibold"><%= success %></span>
  </div>
<% } %>

<div class="min-h-screen flex flex-col lg:flex-row bg-gray-50 font-sans">

  <!-- Sidebar -->
  <aside class="w-full lg:w-1/4 p-8 bg-white shadow-lg flex flex-col gap-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Admin Panel</h1>
    <a class="block text-gray-700 hover:text-blue-500 transition-colors duration-200 font-medium text-lg border-b border-gray-200 pb-2" href="#">All Products</a>
    <a class="block text-blue-500 hover:text-blue-600 transition-colors duration-200 font-bold text-lg border-b-2 border-blue-500 pb-2" href="#">Create New Product</a>
  </aside>

  <!-- Main Content -->
  <main class="w-full lg:w-3/4 p-10">
    <div class="max-w-4xl mx-auto bg-white p-10 rounded-xl shadow-2xl border border-gray-100">
      <h2 class="text-3xl font-extrabold text-gray-800 mb-8 text-center">Create New Product</h2>

      <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="flex flex-col gap-8">

        <!-- Product Details Section -->
        <section class="border-b border-gray-200 pb-6">
          <h3 class="text-xl font-semibold text-gray-700 mb-4">Product Details</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            
            <div class="col-span-1 md:col-span-2">
              <label class="block mb-2 font-medium text-gray-600">Product Image</label>
              <input name="image" type="file" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none focus:border-blue-500">
            </div>

            <input name="name" type="text" placeholder="Product Name" class="border border-gray-300 p-4 rounded-lg w-full focus:ring-2 focus:ring-blue-400 transition-all duration-200" required>
            <input name="price" type="number" placeholder="Product Price" class="border border-gray-300 p-4 rounded-lg w-full focus:ring-2 focus:ring-blue-400 transition-all duration-200" required>
            <input name="discount" type="number" placeholder="Discount Price (Optional)" class="border border-gray-300 p-4 rounded-lg w-full focus:ring-2 focus:ring-blue-400 transition-all duration-200">
          </div>
        </section>

        <!-- Panel Details Section -->
        <section>
          <h3 class="text-xl font-semibold text-gray-700 mb-4">Panel Details</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <input name="bgcolor" type="text" placeholder="Background Color (e.g., #f0f0f0)" class="border border-gray-300 p-4 rounded-lg w-full focus:ring-2 focus:ring-blue-400 transition-all duration-200">
            <input name="panelcolor" type="text" placeholder="Panel Color (e.g., #ffffff)" class="border border-gray-300 p-4 rounded-lg w-full focus:ring-2 focus:ring-blue-400 transition-all duration-200">
            <input name="textcolor" type="text" placeholder="Text Color (e.g., #333333)" class="border border-gray-300 p-4 rounded-lg w-full focus:ring-2 focus:ring-blue-400 transition-all duration-200">
          </div>
        </section>

        <button type="submit" class="px-8 py-4 bg-blue-600 text-white rounded-lg font-bold text-lg hover:bg-blue-700 transition-all duration-300 shadow-md">
          Create New Product
        </button>
      </form>
    </div>
  </main>
</div>

<%- include('./partials/footer') %>

<style>
  @keyframes slide-in-down {
    from {
      transform: translate(-50%, -100%);
    }
    to {
      transform: translate(-50%, 0);
    }
  }

  .animate-slide-in-down {
    animation: slide-in-down 0.5s ease-out forwards;
  }
</style>

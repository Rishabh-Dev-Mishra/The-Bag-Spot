<%- include('./partials/header') %>

<!-- Success Toast -->
<% if (success && success.length > 0) { %>
<div id="flashMessage" class="fixed top-5 left-1/2 -translate-x-1/2 p-4 rounded-lg bg-green-600 shadow-xl animate-bounce z-50 transition-opacity duration-700">
    <span class="inline-block text-white font-bold tracking-wide">
        ‚úÖ <%= success %>
    </span>
</div>
<% } %>

<div class="relative w-full min-h-screen px-16 py-20">

    <!-- Main Layout -->
    <div class="relative w-full flex items-start gap-12">

        <!-- Sidebar -->
        <div class="w-[25%] bg-white/80 backdrop-blur-md shadow-xl rounded-2xl p-6 sticky top-20 h-fit border border-gray-200">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b pb-3">üîç Filters</h2>

            <!-- Sort -->
            <div class="mb-8">
                <h3 class="font-semibold text-gray-700 mb-2">Sort by</h3>
                <form action="/shop" method="GET">
                    <select class="border rounded-lg px-4 py-2 w-full cursor-pointer focus:ring-2 focus:ring-blue-400" 
                            name="sortby" onchange="this.form.submit()">
                        <option value="popular">üî• Popular</option>
                        <option value="newest">üÜï Newest</option>
                    </select>
                </form>
            </div>

            <!-- Categories -->
            <div class="mb-8">
                <h3 class="font-semibold text-gray-700 mb-3">Categories</h3>
                <div class="space-y-3">
                    <a class="block px-3 py-2 rounded-md bg-blue-50 text-blue-600 hover:bg-blue-100 transition" href="/shop?filter=new">‚ú® New Collection</a>
                    <a class="block px-3 py-2 rounded-md bg-purple-50 text-purple-600 hover:bg-purple-100 transition" href="/shop?filter=all">üì¶ All Products</a>
                    <a class="block px-3 py-2 rounded-md bg-red-50 text-red-600 hover:bg-red-100 transition" href="/shop?filter=discounted">üí∏ Discounted</a>
                </div>
            </div>
        </div>

        <!-- Products -->
        <div class="w-[75%] relative">
            <h2 class="text-3xl font-extrabold text-gray-800 mb-10">üõçÔ∏è Explore Our Collection</h2>

            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
                <% if (products && products.length > 0) { %>
                    <% products.forEach(function(product) { %>
                        <div class="relative bg-white/90 backdrop-blur-lg shadow-lg rounded-xl overflow-hidden transform hover:scale-105 hover:shadow-2xl transition duration-300 border border-gray-100">

                            <!-- Product Image -->
                            <div class="w-full h-60 flex items-center justify-center bg-gradient-to-tr from-gray-100 via-white to-gray-200"
                                 style="background-color:<%= product.bgcolor || '#f8f8f8' %>;">
                                <img class="h-[12rem] object-contain transition-transform duration-300 hover:scale-110" 
                                     src="<%= product.image %>" alt="<%= product.name %>">
                            </div>

                            <!-- Product Info -->
                            <div class="px-5 py-4 flex justify-between items-center"
                                 style="background-color:<%= product.panelcolor || '#fff' %>; color:<%= product.textcolor || '#111' %>;">
                                <div>
                                    <h3 class="text-lg font-bold"><%= product.name %></h3>
                                    <h4 class="text-gray-700">‚Çπ <%= product.price %></h4>
                                </div>
                                <button 
                                    onclick="showCartButton()" 
                                    class="w-10 h-10 flex items-center justify-center rounded-full bg-blue-500 text-white hover:bg-blue-600 transition shadow-md">
                                    <i class="ri-shopping-cart-line text-lg"></i>
                                </button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <p class="text-gray-500 text-lg">üòï No products available at the moment.</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Floating Go to Cart Button -->
<div id="goToCartBar" class="fixed bottom-5 left-1/2 -translate-x-1/2 bg-green-600 text-white px-6 py-3 rounded-full shadow-lg flex items-center gap-3 cursor-pointer opacity-0 pointer-events-none transition-all duration-500">
    <i class="ri-shopping-bag-3-line text-xl"></i>
    <a href="/cart" class="font-semibold">Go to Cart</a>
</div>

<script>
    // Auto-hide flash message after 4 seconds
    const flash = document.getElementById("flashMessage");
    if (flash) {
        setTimeout(() => {
            flash.classList.add("opacity-0");
            setTimeout(() => flash.remove(), 700); // remove from DOM after fade
        }, 4000);
    }

    // Show floating "Go to Cart" button
    function showCartButton() {
        const bar = document.getElementById("goToCartBar");
        bar.classList.remove("opacity-0", "pointer-events-none");
        bar.classList.add("opacity-100");
    }
</script>

<%- include('./partials/footer') %>

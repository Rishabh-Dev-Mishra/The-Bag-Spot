<%- include('./partials/header') %>
<div class="w-full h-screen flex items-start px-20 py-20 gap-10">
    <div class="w-[30%] rounded-md overflow-hidden">
        <% if (groupedProducts && groupedProducts.length > 0) { %>
            <% groupedProducts.forEach(function(item) { %>
                <div class="w-full flex flex-col">
                    <div class="w-full flex justify-center items-center h-80 bg-[<%= item.product.bgcolor || '#ffffff' %>]">
                        <img class="h-[18rem]" src="<%= item.product.image %>" alt="<%= item.product.name %>">
                    </div>

                    <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.product.panelcolor || '#f4f4f4' %>]">
                        <h3 class="text-2xl"><%= item.product.name %></h3>
                        <div class="flex items-center gap-2">
                            <a href="/updatequantity/<%= item.product._id %>/increase" class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></a>
                            
                           
                            <div class="px-2 py-1 rounded-md bg-white text-black"><%= item.quantity %></div>
                            
                            <a href="/updatequantity/<%= item.product._id %>/decrease" class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></a>
                        </div>
                    </div>
                    <div class="flex items-center justify-between px-5 py-3 bg-[<%= item.product.textcolor || '#000000' %>] text-white">
                        <h4 class="text-lg">Net Total</h4>
                        <h2 class="text-lg">₹ <%= (item.product.price - item.product.discount) * item.quantity %></h2>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <p class="text-gray-500">Your cart is empty.</p>
        <% } %>
    </div>

    <div class="w-[70%]">
        <h3 class="text-xl">Price Breakdown</h3>
        <div class="px-10 mt-5">
            <div class="flex mt-2">
                <h4 class="w-1/3">Total MRP</h4>
                <h4>₹ <%= groupedProducts.reduce((sum, { product, quantity }) => sum + (product.price * quantity), 0) %></h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Discount on MRP</h4>
                <h4>₹ <%= groupedProducts.reduce((sum, { product, quantity }) => sum + (product.discount * quantity), 0) %></h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Platform Fee</h4>
                <h4>₹ 20</h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Shipping Fee</h4>
                <h4>FREE</h4>
            </div>
        </div>

        <div class="w-full h-[1px] bg-black mt-10"></div>

        <div class="flex mt-5">
            <h3 class="w-1/3 text-xl">Total Amount</h3>
            <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>

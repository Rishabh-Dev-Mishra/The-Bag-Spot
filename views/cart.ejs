<%- include('./partials/header') %>

<div class="w-full min-h-screen flex items-start px-20 py-20 gap-10">
  <% if (user.cart && user.cart.length > 0) { %>
    <% user.cart.forEach(item => { %>
      <% if (item.product) { %>
      <div class="w-[30%] rounded-md overflow-hidden">
        <!-- Product Image -->
        <div class="w-full flex justify-center items-center h-80"
             style="background-color: <%= item.product.bgcolor || '#fff' %>">
          <img class="h-[18rem]" src="/images/<%= item.product.image %>" alt="<%= item.product.name %>" />
        </div>

        <!-- Product Info -->
        <div class="w-full flex justify-between px-5 py-4"
             style="background-color: <%= item.product.panelcolor || '#f8f8f8' %>">
          <h3 class="text-2xl"><%= item.product.name %></h3>
          <div class="flex items-center gap-2">
            <a href="/addtocart/<%= item.product._id %>?action=increase&from=cart">
              <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
            </a>
            <div class="px-2 py-1 rounded-md bg-white text-black"><%= item.quantity %></div>
            <a href="/addtocart/<%= item.product._id %>?action=decrease&from=cart">
              <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
            </a>
          </div>
        </div>

        <!-- Net Total -->
        <div class="flex items-center justify-between px-5 py-3"
             style="background-color: <%= item.product.textcolor || '#000' %>; color: white;">
          <h4 class="text-lg">Net Total</h4>
          <h2 class="text-lg">
            ₹ <%= (item.product.price - (item.product.discount || 0)) * item.quantity %>
          </h2>
        </div>
      </div>
      <% } %>
    <% }) %>

    <!-- Price Breakdown -->
    <div class="w-[70%]">
      <h3 class="text-xl">Price Breakdown</h3>
      <div class="px-10 mt-5">
        <% let totalMRP = 0, totalDiscount = 0; %>
        <% user.cart.forEach(item => { if(item.product){ 
            totalMRP += item.product.price * item.quantity;
            totalDiscount += (item.product.discount || 0) * item.quantity;
        } }); %>

        <div class="flex mt-2">
          <h4 class="w-1/3">Total MRP</h4>
          <h4>₹ <%= totalMRP %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Discount on MRP</h4>
          <h4>₹ <%= totalDiscount %></h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Platform Fee</h4>
          <h4>₹ 20</h4>
        </div>
        <div class="flex mt-2">
          <h4 class="w-1/3">Shipping Fee</h4>
          <h4>FREE</h4>
        </div>
      </div>

      <div class="w-full h-[1px] bg-black mt-10"></div>

      <div class="flex mt-5">
        <h3 class="w-1/3 text-xl">Total Amount</h3>
        <h3 class="font-semibold text-xl text-green-600">₹ <%= bill %></h3>
      </div>
    </div>
  <% } else { %>
    <div class="w-full text-center text-xl text-gray-500">
      Your cart is empty!
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>

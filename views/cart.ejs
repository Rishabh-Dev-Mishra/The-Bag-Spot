<%- include('./partials/header') %>

<div class="w-full min-h-screen bg-gray-50 p-10">
    <h1 class="text-3xl font-bold mb-6">Your Cart</h1>

    <% if (groupedProducts.length > 0) { %>
        <div class="space-y-5">
            <% groupedProducts.forEach(({ product, quantity }) => { %>
                <div class="flex items-center bg-white shadow rounded p-4">
                    <img src="<%= product.image %>" alt="<%= product.name %>" class="w-20 h-20 object-cover rounded" />
                    <div class="ml-4 flex-1">
                        <h3 class="text-lg font-semibold"><%= product.name %></h3>
                        <p class="text-gray-600">₹ <%= product.price %> 
                           <% if (product.discount > 0) { %>
                               <span class="text-green-600 ml-2">-₹<%= product.discount %> off</span>
                           <% } %>
                        </p>
                        <p class="text-sm text-gray-500">Quantity: <%= quantity %></p>
                    </div>
                    <div class="flex space-x-2">
                        <a href="/updatequantity/<%= product._id %>/increase" class="px-2 py-1 bg-green-500 text-white rounded">+</a>
                        <a href="/updatequantity/<%= product._id %>/decrease" class="px-2 py-1 bg-red-500 text-white rounded">-</a>
                    </div>
                </div>
            <% }) %>
        </div>

        <div class="mt-10 bg-white shadow rounded p-6">
            <h2 class="text-2xl font-bold mb-4">Order Summary</h2>
            <div class="flex justify-between mb-2">
                <h4>Subtotal</h4>
                <h4>₹ <%= groupedProducts.reduce((sum, { product, quantity }) => sum + (product.price * quantity), 0) %></h4>
            </div>
            <div class="flex justify-between mb-2">
                <h4>Discounts</h4>
                <h4>- ₹ <%= groupedProducts.reduce((sum, { product, quantity }) => sum + ((product.discount || 0) * quantity), 0) %></h4>
            </div>
            <% if (platformFee > 0) { %>
                <div class="flex justify-between mb-2">
                    <h4>Platform Fee</h4>
                    <h4>₹ <%= platformFee %></h4>
                </div>
            <% } %>
            <div class="flex justify-between font-bold text-xl border-t pt-4">
                <h4>Total</h4>
                <h4>₹ <%= bill %></h4>
            </div>
        </div>
    <% } else { %>
        <p class="text-gray-500">Your cart is empty.</p>
    <% } %>
</div>

<%- include('./partials/footer') %>

<%- include('./partials/header') %>

<!-- Full Page Background -->
<div class="w-full min-h-screen px-10 py-10 bg-gradient-to-br from-gray-100 via-gray-200 to-gray-300 flex flex-col lg:flex-row gap-10">

  <% if (user.cart && user.cart.length > 0) { %>

    <!-- Cart Items -->
    <div class="w-full lg:w-3/5 flex flex-col gap-6">
      <% user.cart.forEach(item => { if(item.product){ %>
        <div class="flex flex-col md:flex-row bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300 transform hover:-translate-y-1">
          <!-- Product Image -->
          <div class="w-full md:w-48 h-64 flex justify-center items-center"
               style="background-color: <%= item.product.bgcolor || '#f5f5f5' %>">
            <img class="h-52 object-contain transition-transform hover:scale-105 duration-300" 
                 src="/images/<%= item.product.image %>" alt="<%= item.product.name %>" />
          </div>

          <!-- Product Details -->
          <div class="flex flex-col justify-between flex-1 p-5">
            <div>
              <h3 class="text-2xl font-semibold text-gray-800"><%= item.product.name %></h3>
              <p class="text-gray-600 mt-1">₹ <%= item.product.price %></p>
              <% if(item.product.discount && item.product.discount > 0){ %>
                <span class="text-green-600 text-sm font-semibold">-₹<%= item.product.discount %> off</span>
              <% } %>
            </div>

            <!-- Quantity Controls -->
            <div class="flex items-center gap-3 mt-4">
              <a href="/addtocart/<%= item.product._id %>?action=decrease&from=cart"
                 class="w-8 h-8 bg-gray-200 hover:bg-gray-300 rounded-full flex items-center justify-center transition">
                <i class="ri-subtract-line"></i>
              </a>
              <span class="px-3 py-1 rounded-md bg-gray-100 text-black font-semibold"><%= item.quantity %></span>
              <a href="/addtocart/<%= item.product._id %>?action=increase&from=cart"
                 class="w-8 h-8 bg-gray-200 hover:bg-gray-300 rounded-full flex items-center justify-center transition">
                <i class="ri-add-line"></i>
              </a>
            </div>

            <!-- Net Total -->
            <div class="mt-4 flex justify-between items-center p-3 rounded-md"
                 style="background-color: <%= item.product.textcolor || '#000' %>; color: white;">
              <span>Net Total</span>
              <span>₹ <%= (item.product.price - (item.product.discount || 0)) * item.quantity %></span>
            </div>
          </div>
        </div>
      <% } }) %>
    </div>

    <!-- Price Summary -->
    <div class="w-full lg:w-2/5 bg-white rounded-xl shadow-md p-6 sticky top-20 h-fit">
      <h3 class="text-xl font-semibold mb-5">Price Breakdown</h3>

      <% let totalMRP = 0, totalDiscount = 0; %>
      <% user.cart.forEach(item => { if(item.product){ 
          totalMRP += item.product.price * item.quantity;
          totalDiscount += (item.product.discount || 0) * item.quantity;
      } }); %>

      <div class="flex justify-between mt-2">
        <span>Total MRP</span>
        <span>₹ <%= totalMRP %></span>
      </div>
      <div class="flex justify-between mt-2">
        <span>Discount on MRP</span>
        <span class="text-green-600">-₹ <%= totalDiscount %></span>
      </div>
      <div class="flex justify-between mt-2">
        <span>Platform Fee</span>
        <span>₹ 20</span>
      </div>
      <div class="flex justify-between mt-2">
        <span>Shipping Fee</span>
        <span>FREE</span>
      </div>

      <div class="w-full h-px bg-gray-300 my-4"></div>

      <div class="flex justify-between font-semibold text-lg">
        <span>Total Amount</span>
        <span class="text-green-600">₹ <%= bill %></span>
      </div>

      <!-- Checkout Button -->
      <a href="/checkout" 
         class="block text-center mt-6 px-5 py-3 rounded-lg bg-green-600 text-white font-semibold hover:bg-green-700 transition">
        Proceed to Checkout
      </a>
    </div>

  <% } else { %>
    <div class="w-full text-center text-xl text-gray-500">
      Your cart is empty!
    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>
